<div class="row mb-4">
  <div class="col-md-6 offset-md-3">
    <h1 class="display-4">
      discover

    </h1>
    
    <p class="lead text-muted">posts liked by people you follow</p>
  </div>
</div>

<% @user.discover.each do |photo| %>
  <% if !photo.owner.private? || @user.leaders.include?(photo.owner) %>
    <div class="row mb-4">
      <div class="col-md-6 offset-md-3">
        <%= render "photos/photo", photo: photo %>
      </div>
    </div>
  <% end %>
<% end %>
