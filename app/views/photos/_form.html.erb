<%= turbo_frame_tag dom_id(photo, :frame), class: "card-body" do %>
  <%= form_with(model: photo) do |form| %>
    <% if photo.errors.any? %>
      <div id="error_explanation">
        <ul class="list-unstyled">
          <% photo.errors.each do |error| %>
            <li>
              <div class="alert alert-danger" role="alert">
                <%= error.full_message %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.text_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :caption %>
      <%= form.text_area :caption, class: "form-control" %>
    </div>

    <div class="actions d-flex justify-content-between">
      <%= form.submit class: "btn btn-outline-primary btn-block" %>
      <% if photo.persisted? %>
        <%= link_to "Cancel", photo %>
      <% end %>
    </div>
  <% end %>
<% end %>
