<%= turbo_frame_tag dom_id(photo, :likes) do %>
  <div class="d-flex align-items-center">
    <%= render "photos/likes_count", photo: photo %>

    <% like = current_user.likes.find_by(photo: photo) %>

    <% if like %>
      <%= button_to like, class: "btn btn-link", method: :delete do %>
        <i class="fas fa-heart fa-fw"></i>

        Un-like
      <% end %>
    <% else %>
      <%= render "likes/form", like: photo.likes.build(fan: current_user) %>
    <% end %>
  </div>
<% end %>
