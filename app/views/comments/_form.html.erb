<li class="list-group-item">
  <%= turbo_frame_tag dom_id(comment) do %>
    <%= form_with(model: comment) do |form| %>
      <% if comment.errors.any? %>
        <div id="error_explanation">
          <ul class="list-unstyled">
            <% comment.errors.each do |error| %>
              <li>
                <div class="alert alert-danger" role="alert">
                  <%= error.full_message %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.hidden_field :photo_id %>

      <div class="form-group mb-3" data-controller="character-counter" data-character-counter-warning-class="text-danger">
        <%= form.label :body, class: "visually-hidden" %>
        <%= form.text_area :body, class: "form-control", data: { controller: "autosize", "character-counter-target": "input" } %>
        <p>
          There are
          <strong data-character-counter-target="counter"><%= comment.body.to_s.length %></strong> characters in this comment.
        </p>
      </div>

      <div class="actions d-grid gap-2">
        <%= form.submit class: "btn btn-outline-secondary" %>
        <% if comment.persisted? %>
          <%= link_to "Cancel", comment.photo, class: "btn btn-link link-underline link-underline-opacity-0 link-underline-opacity-100-hover" %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</li>
