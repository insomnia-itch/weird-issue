<%= turbo_frame_tag dom_id(comment), src: comment_path(comment, frame: true), class: "list-group-item" do %>  
  <li class="list-group-item">
      <div class="media">
        <%#= image_tag comment.author.avatar_image, class: "rounded-circle mr-2", width: 36 %>
        <span class="rounded-circle" style="width: 36px; height: 36px;"></span>
        <div class="media-body">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="mt-0">
              <span class="placeholder col-4"></span>
            </h5>

            <div>
              <%= link_to "#", class: "btn btn-link btn-sm disabled text-muted" do %>
                <i class="fas fa-edit fa-fw"></i>
              <% end %>

              <%= link_to "#", method: :delete, class: "btn btn-link btn-sm disabled text-muted" do %>
                <i class="fas fa-trash fa-fw"></i>
              <% end %>
            </div>
          </div>
          <p>
            <span class="placeholder col-7"></span>
            <span class="placeholder col-4"></span>
            <span class="placeholder col-4"></span>
            <span class="placeholder col-6"></span>
            <span class="placeholder col-8"></span>
          </p>
        </div>
      </div> 
  </li>
<% end %>
